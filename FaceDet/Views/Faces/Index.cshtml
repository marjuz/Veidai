@model IEnumerable<MarJuz.FaceDetection.Entities.Faces>

@{
    ViewBag.Title = "Faces";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table id="FaceLine">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FaceName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FaceName)<br />
                <img src="@Url.Content("/images/"+item.FileName)" alt="Image" height="50px" />

            </td>
            <td>
                @Html.ActionLink("Keisti veido vardą", "Edit", new { id = item.Id } )
            </td>
        </tr>
    }

</table>
